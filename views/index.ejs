<!DOCTYPE html>
<html lang="en">
<head>
  <title>Quiz App - Home Page</title>

  <!-- Meta Information -->
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name='viewport' content="width=device-width, initial-scale=1.0, maximum-scale=1.0">

  <!-- External JS -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js" integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

  <!-- App JS -->
  <script type="text/javascript" src="/scripts/app.js"></script>

  <!-- External CSS -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/8.0.1/normalize.min.css" type="text/css" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Patua+One&family=Source+Sans+Pro:ital,wght@0,300;0,600;1,300;1,600&display=swap" rel="stylesheet">

  <!-- App CSS -->
  <link rel="stylesheet" href="/styles/layout.css" type="text/css">
  <link rel="stylesheet" href="/styles/main.css" type="text/css">
  <link rel="stylesheet" href="/styles/header.css" type="text/css">

</head>
<body>
  <%- include('partials/_header') %>
  <main>
    <section id="create">
      <div id="create-a-new-quiz">
        <i class="fa-solid fa-plus"></i>
        <span>Create A New Quiz</span>
      </div>
      <form id="create-form">
        <input type="text" id="quiz-title" placeholder="Quiz"><br>
        <input type="text" id="question1-title" placeholder="Question"><br>
        <div>
          <input type="text" id="option1-text" placeholder="Option 1">
          <input type="radio" id="option1-radio" name="correct-option">
        </div>
        <div>
          <input type="text" id="option2-text" placeholder="Option 2">
          <input type="radio" id="option2-radio" name="correct-option">
        </div>
        <div id="more-options-button">
          <span id="more-options-text">More options</span>
          <i class="fa-solid fa-caret-down"></i>
        </div>
        <div id="more-questions-button">
          <span id="more-questions-text">More questions</span>
          <i class="fa-solid fa-caret-down"></i>
        </div>
        <div>
          <input type="checkbox" id="unlisted-checkbox"><label for="unlisted-checkbox">Make this quiz private</label>
        </div>
        <button type="submit">Submit</button>
      </form>
    </section>
    <section id="tables">
      <button type="button" class="collapsible">Quizzes</button>
      <div class="content">
        <table id="quizzes">
          <tr>
            <th>Quiz Title</th>
            <th>Owner ID</th>
            <th>Start Quiz</th>
            <th>Share Quiz</th>
          <% for (let quiz of quizzes) { %>
            <tr>
              <td><%= quiz['title'] %></td>
              <td><%= quiz['owner_id'] %></td>
              <td><a class="quiz-link" href="/quizzes/<%= quiz['id'] %>">Start Quiz</a></td>
              <td><a class="copy-quiz-link">Share Quiz</a></td>
            </tr>
          <% } %>
        </table>
      </div>
      <button type="button" class="collapsible">Results</button>
      <div class="content">
        <table id="attempts">
          <tr>
            <th>Quiz Title</th>
            <th>User ID</th>
            <th>Date</th>
            <th>View Result</th>
            <th>Share Result</th>
          </tr>
          <% for (let test of tests) { %>
            <tr>
              <td><%= test['title'] %></td>
              <td><%= test['user_id'] %></td>
              <td><a class="test-link" href="/tests/<%= test['id'] %>">View Result</a></td>
              <td><a class="copy-test-link">Share Result</a></td>
            </tr>
          <% } %>
        </table>
      </div>
    </section>
  </main>
</body>
